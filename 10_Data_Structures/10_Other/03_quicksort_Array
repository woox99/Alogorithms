
// O(N LogN)
const quickSort = arr => {
    if(arr.length <= 1){
        return arr;
    }

    const pivot = arr[0];
    const left = [];
    const right = [];

    for(let i = 1; i < arr.length; i++){
        if(arr[i] < pivot){
            left.push(arr[i]);
        }
        else{
            right.push(arr[i]);
        }
    }

    return  quickSort(left).concat(pivot, quickSort(right));
}

const result = quickSort([1,5,4,5]);
console.log(result)